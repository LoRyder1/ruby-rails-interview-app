
<h4><u><%=@project.name %></u> - <%=@project.description %></h4>
<%= link_to 'Edit Project', edit_project_path %> |
<%= link_to 'Destroy Project', project_path, method: :delete, data: {confirm: "Are you sure?"} %>

<hr>

<h5>Employee's Working on Project:</h5>

<ul>
  <% @project.users.each do |employee| %>
    <li><i><%= employee.name%></i></li>
  <% end %>  
</ul>

<hr>

<h5> Materials Needed for Project </h5>

<ul>
  <% @project.materials.each do |material| %>
    <li><i><%= material.name  %></li>
  <% end %>
</ul>